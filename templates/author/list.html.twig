{% if authors is empty%}
    <p>No authors found</p>
{% else %}
    <h1>Authors</h1>
    <ul>
        <table>
            <thead>
            <tr>
                <th>#</th>
                <th>Picture</th>
                <th>Username</th>
                <th>Email</th>
                <th>Number of Books</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for author in authors %}
                <tr>
                <td>{{ loop.index }}</td>
                <td><img src="{{ asset(author.picture) }}" height="200px" width="200px"/></td>
                <td>{{ author.username|upper }}</td>
                <td>{{ author.email }}</td>
                <td>{{ author.nb_books }}</td>
                <td> <a href={{url('authorDetails', {id:author.id})}}>Details</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% set total_books = 0 %}
        {% for author in authors %}
            {% set total_books = total_books + author.nb_books %}
        {% endfor %}
        <p>Total number of books: {{ total_books }}</p>
    </ul>
{% endif %}